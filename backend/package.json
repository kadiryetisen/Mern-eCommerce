{
  "name": "backend",
  "version": "1.0.0",
  "description": "Mern Project",
  "main": "server.js",
  "scripts": {
    "start": "nodemon src/server",
    "import:data": "node data/seeder",
    "destroy:data": "node data/seeder -d",
    "doc": "jsdoc -c jsdoc.json",
    "test": "jest --watchAll --detectOpenHandles",
    "lint": "eslint ."
  },
  "author": "Kadir Yeti≈üen",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "connect-mongo": "^4.6.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-async-handler": "^1.2.0",
    "express-session": "^1.17.2",
    "express-validator": "^6.13.0",
    "helmet": "^4.6.0",
    "http-proxy-middleware": "^2.0.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.0.13",
    "nodemailer": "^6.7.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "cross-env": "^7.0.3",
    "jest": "^27.3.1",
    "jest-mock": "^27.3.0",
    "jest-watch-typeahead": "^1.0.0",
    "node-mocks-http": "^1.11.0",
    "nodemon": "^2.0.15",
    "smtp-server": "^3.9.0",
    "supertest": "^6.1.6"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2021
    }
  },
  "extends": [
    "eslint : recommended",
    "plugin : prettier/recommended"
  ],
  "plugins": [
    "prettier"
  ],
  "env": {
    "node": true,
    "jest": true
  },
  "rules": {
    "eqeqeq": "warn",
    "prettier/prettier": "warn"
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 120
  },
  "jest": {
    "watchPlugins": [
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname"
    ]
  }
}
